@using Writers.Extensions

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <img src="~/Content/Images/brand.png" width="32" height="46" alt="">
            @Html.ActionLink("Writers", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Personalities", "Index", "Person", null, new { @class = "nav-link"})
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Works", "Index", "Work", null, new { @class = "nav-link" })
                    </li>
                </ul>
                @using (Html.BeginForm("Index", "Person", FormMethod.Get, new { @class = "form-inline my-2 my-lg-0 mr-auto search" }))
                {
                    @Html.TextBox("searchString", "", new { @class = "form-control mr-sm-2", placeholder="Search" })
                    <button type="submit" title="Search"><img src="~/Content/Images/search.png" width="15" height="15" /></button>
                }
                @*<form class="form-inline my-2 my-lg-0 mr-auto search">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button type="submit"><i class="fas fa-search"></i></button>
                </form>*@
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Log in", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container-fluid">
                @Html.Raw(Html.BuildBreadcrumbs())
        </div>
    </header>

    <main class="container body-content">
        @RenderBody()
    </main>

        <footer class="footer">
            <p> &copy; @DateTime.Now.Year - My ASP.NET Application </p>
        </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>



